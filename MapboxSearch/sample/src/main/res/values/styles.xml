<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="Toolbar.Theme.Light.LightControls" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="SimpleUiTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent">?attr/mapboxSearchSdkPrimaryAccentLightColor</item>
        <item name="colorPrimary">?attr/mapboxSearchSdkPrimaryAccentColor</item>
        <item name="colorControlNormal">?attr/mapboxSearchSdkPrimaryAccentColor</item>
        <item name="android:textColorHint">?attr/mapboxSearchSdkPrimaryTextInactiveColor</item>

        <item name="toolbarStyle">@style/Sample.Toolbar</item>
        <item name="searchViewStyle">@style/Sample.SearchView</item>
        <item name="editTextStyle">@style/MapboxSearchSdk.Text.Primary</item>
    </style>

    <style name="CustomTheme" parent="AppTheme">
        <item name="mapboxSearchSdkTheme">@style/CustomSearchSdkTheme</item>
    </style>

    <style name="CustomSearchSdkTheme" parent="">
        <item name="mapboxSearchSdkPrimaryTextColor">#1C82D3</item>
        <item name="mapboxSearchSdkPrimaryTextInactiveColor">#466075</item>
        <item name="mapboxSearchSdkPrimaryAccentColor">#C33364</item>
        <item name="mapboxSearchSdkPrimaryAccentLightColor">#AE5170</item>
        <item name="mapboxSearchSdkOnPrimaryAccentColor">#FFEB3B</item>
        <item name="mapboxSearchSdkDistanceColor">#BA802B</item>
        <item name="mapboxSearchSdkIconTintColor">#1C82D3</item>
        <item name="mapboxSearchSdkBackgroundColor">#FFD53D</item>
        <item name="mapboxSearchSdkBackgroundSecondaryColor">#F6E8C4</item>
        <item name="mapboxSearchSdkTongueColor">#F1D3B5</item>
        <item name="mapboxSearchSdkPopulateArrowColor">#D3C9A6</item>
        <item name="mapboxSearchSdkInputViewClearIconColor">#F4683C</item>
        <item name="mapboxSearchSdkProgressColor">#C33364</item>
        <item name="mapboxSearchSdkErrorIconColor">#FF0F0F</item>

        <item name="mapboxSearchSdkPopupDialogThemeOverlay">@style/CustomSearchSdkThemeOverlay</item>
    </style>

    <style name="CustomSearchSdkThemeOverlay" parent="">
        <item name="mapboxSearchSdkPrimaryTextColor">#333333</item>
        <item name="mapboxSearchSdkIconTintColor">#666666</item>
        <item name="mapboxSearchSdkBackgroundColor">#FFFFFF</item>
    </style>

    <!-- Widgets -->

    <style name="Sample.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/mapboxSearchSdkBackgroundColor</item>
    </style>

    <style name="Sample.SearchView" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:searchIcon">@null</item>
    </style>

</resources>
