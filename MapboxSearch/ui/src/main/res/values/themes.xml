        <item name="colorControlNormal">?attr/mapboxSearchSdkPrimaryAccentLightColor</item>
        <item name="colorPrimary">?attr/mapboxSearchSdkPrimaryAccentLightColor</item>
    </style>

    <style name="MapboxSearchSdk.Internal.Theme.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">?attr/mapboxSearchSdkBackgroundColor</item>
    </style>

</resources>
