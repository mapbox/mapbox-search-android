<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MapboxSearchSdk.Theme.Auto" parent="MapboxSearchSdk.Theme.Light"/>

    <style name="MapboxSearchSdk.Theme.Light" parent="">
        <item name="mapboxSearchSdkPrimaryTextColor">#343434</item>
        <item name="mapboxSearchSdkPrimaryTextInactiveColor">#BCBCBF</item>
        <item name="mapboxSearchSdkPrimaryAccentColor">#007AFF</item>
        <item name="mapboxSearchSdkPrimaryAccentLightColor">#5592FF</item>
        <item name="mapboxSearchSdkOnPrimaryAccentColor">#FFFFFF</item>
        <item name="mapboxSearchSdkDistanceColor">#9FB3C6</item>
        <item name="mapboxSearchSdkIconTintColor">#343434</item>
        <item name="mapboxSearchSdkBackgroundColor">#FFFFFF</item>
        <item name="mapboxSearchSdkBackgroundSecondaryColor">#F0F0F1</item>
        <item name="mapboxSearchSdkTongueColor">#DADADB</item>
        <item name="mapboxSearchSdkPopulateArrowColor">#B2D7FF</item>
