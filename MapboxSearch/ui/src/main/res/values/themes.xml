        <item name="mapboxSearchSdkProgressColor">#007AFF</item>
        <item name="mapboxSearchSdkErrorIconColor">#E5E5E5</item>

        <item name="mapboxSearchSdkPopupDialogThemeOverlay">@style/MapboxSearchSdk.ThemeOverlay.Light</item>
    </style>

    <style name="MapboxSearchSdk.Theme.Dark" parent="">
        <item name="mapboxSearchSdkPrimaryTextColor">#FFFFFF</item>
        <item name="mapboxSearchSdkPrimaryTextInactiveColor">#898A8D</item>
        <item name="mapboxSearchSdkPrimaryAccentColor">#0A84FF</item>
        <item name="mapboxSearchSdkPrimaryAccentLightColor">#5592FF</item>
        <item name="mapboxSearchSdkOnPrimaryAccentColor">#FFFFFF</item>
        <item name="mapboxSearchSdkDistanceColor">#9FB3C6</item>
        <item name="mapboxSearchSdkIconTintColor">#FFFFFF</item>
        <item name="mapboxSearchSdkBackgroundColor">#454545</item>
        <item name="mapboxSearchSdkBackgroundSecondaryColor">#545454</item>
        <item name="mapboxSearchSdkTongueColor">#343332</item>
        <item name="mapboxSearchSdkPopulateArrowColor">#656565</item>
