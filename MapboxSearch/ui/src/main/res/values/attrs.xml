<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MapboxSearchSdkTheme">
        <!-- Primary text color. -->
        <attr name="mapboxSearchSdkPrimaryTextColor" format="color"/>
        <!--
            Color for inactive texts, such as unselected tab text or
            search address text in search results list.
         -->
        <attr name="mapboxSearchSdkPrimaryTextInactiveColor" format="color"/>
        <!-- Primary accent color. Used as buttons primary color, search highlight color and primary tint color. -->
        <attr name="mapboxSearchSdkPrimaryAccentColor" format="color"/>
        <!-- Color of text/icon which drawn on top of the primary color. -->
        <attr name="mapboxSearchSdkOnPrimaryAccentColor" format="color"/>
        <!-- Color of distance text, shown next to search result. -->
        <attr name="mapboxSearchSdkDistanceColor" format="color"/>
        <!-- Default icon tint color. -->
        <attr name="mapboxSearchSdkIconTintColor" format="color"/>
        <!-- Default background color. -->
        <attr name="mapboxSearchSdkBackgroundColor" format="color"/>
        <!--
            Another version of background color.
            Used as EditTexts background, category buttons background and divider color.
        -->
        <attr name="mapboxSearchSdkBackgroundSecondaryColor" format="color"/>
        <!-- Color of the small arrow indicator placed in right top corner of each search result. -->
        <attr name="mapboxSearchSdkPopulateArrowColor" format="color"/>
        <!--
            (Optional) Color of ProgressBar indicators.
            If not specified, indicators fallback to "mapboxSearchSdkPrimaryAccentColor" color.
         -->
        <attr name="mapboxSearchSdkProgressColor" format="color"/>
        <!-- Color of the error icon. -->
        <attr name="mapboxSearchSdkErrorIconColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="MapboxSearchSdkThemeEntryPoint">
        <!--
            Theme attribute for Search SDK theme customization.
            Please, take a look at "MapboxSearchSdkTheme" for required attributes.
        -->
        <attr name="mapboxSearchSdkTheme" format="reference"/>
    </declare-styleable>

    <declare-styleable name="SearchSdkFrameLayout">
        <!-- (Optional) Max width of the view. -->
        <attr name="maxWidth" format="dimension"/>
    </declare-styleable>

    <!-- Internal attributes -->
    <eat-comment/>

    <declare-styleable name="MapboxSdkButtonWithIcon">
        <attr name="iconSrc" format="integer" />
        <attr name="drawableTintCompat" format="color" />
    </declare-styleable>
</resources>
