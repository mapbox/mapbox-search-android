<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="mapbox_search_sdk_text_size_tiny">11sp</dimen>
    <dimen name="mapbox_search_sdk_text_size_small">13sp</dimen>
    <dimen name="mapbox_search_sdk_text_size_normal">15sp</dimen>

    <dimen name="mapbox_search_sdk_text_small_min_height">22dp</dimen>
    <dimen name="mapbox_search_sdk_text_normal_min_height">22dp</dimen>

    <style name="MapboxSearchSdk.Text.Base" parent="">
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="MapboxSearchSdk.Text.RobotoRegular" parent="MapboxSearchSdk.Text.Base">
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="MapboxSearchSdk.Text.RobotoMedium" parent="MapboxSearchSdk.Text.Base">
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="MapboxSearchSdk.Text.RobotoBold" parent="MapboxSearchSdk.Text.Base">
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MapboxSearchSdk.Text.Primary" parent="MapboxSearchSdk.Text.RobotoMedium">
        <item name="android:textColor">?attr/mapboxSearchSdkPrimaryTextColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/mapbox_search_sdk_text_size_normal</item>
        <item name="android:minHeight">@dimen/mapbox_search_sdk_text_normal_min_height</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="MapboxSearchSdk.Text.Secondary" parent="MapboxSearchSdk.Text.RobotoMedium">
        <item name="android:textColor">?attr/mapboxSearchSdkPrimaryTextInactiveColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/mapbox_search_sdk_text_size_small</item>
        <item name="android:minHeight">@dimen/mapbox_search_sdk_text_small_min_height</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="MapboxSearchSdk.Text.BoldHeader" parent="MapboxSearchSdk.Text.RobotoBold">
        <item name="android:textColor">?attr/mapboxSearchSdkPrimaryTextInactiveColor</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/mapbox_search_sdk_text_size_tiny</item>
    </style>

    <style name="MapboxSearchSdk.Text.BoldHeader.Big" parent="MapboxSearchSdk.Text.BoldHeader">
        <item name="android:textSize">@dimen/mapbox_search_sdk_text_size_small</item>
        <item name="android:minHeight">@dimen/mapbox_search_sdk_text_small_min_height</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="MapboxSearchSdk.Text.Distance" parent="MapboxSearchSdk.Text.RobotoRegular">
        <item name="android:textColor">?attr/mapboxSearchSdkDistanceColor</item>
        <item name="android:textSize">@dimen/mapbox_search_sdk_text_size_small</item>
        <item name="android:minHeight">@dimen/mapbox_search_sdk_text_small_min_height</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="MapboxSearchSdk.Text.Address" parent="MapboxSearchSdk.Text.RobotoRegular">
        <item name="android:textColor">?attr/mapboxSearchSdkPrimaryTextInactiveColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/mapbox_search_sdk_text_size_small</item>
        <item name="android:minHeight">@dimen/mapbox_search_sdk_text_small_min_height</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="MapboxSearchSdk.Text.CategoryHeader" parent="MapboxSearchSdk.Text.RobotoBold">
        <item name="android:textSize">@dimen/mapbox_search_sdk_text_size_normal</item>
        <item name="android:textColor">?attr/mapboxSearchSdkPrimaryAccentColor</item>
    </style>
</resources>
